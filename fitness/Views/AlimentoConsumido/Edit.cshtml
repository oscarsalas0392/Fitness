@model Fitness.Model.Models.AlimentoConsumido

<a class="regresar" asp-action="Index"><i class="fas fa-arrow-left"></i></a>
<h4 class="d-inline-block">Editar Alimento de la dieta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group pt-3">
                <label asp-for="Alimento" class="control-label"></label>
                <select asp-for="Alimento" class="form-control" asp-items="ViewBag.Alimento"></select>
                <span asp-validation-for="Alimento" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <label asp-for="Opcion" class="control-label">Opción</label>
                <select asp-for="Opcion" class="form-control" asp-items="ViewBag.Opcion"></select>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
              
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

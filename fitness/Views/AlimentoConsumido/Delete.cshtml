@model Fitness.Model.Models.AlimentoConsumido


<h3>¿Usted está seguro de eliminar esto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Alimento
        </dt>
        <dd class="col-sm-10">
            @((ViewBag.Alimento as SelectList).Where(x => x.Value == Model.Alimento.ToString()).FirstOrDefault().Text)
        </dd>
        <dt class = "col-sm-2">
            Plato
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opcion)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>


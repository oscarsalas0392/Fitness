@model Fitness.Model.Models.Alimento



<h3 >¿Usted está seguro de eliminar esto?</h3>
<div>
    <a class="regresar" asp-action="Index"><i class="fas fa-arrow-left"></i></a>
    <h4 class="d-inline-block">Alimento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
                Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
                Calorías
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Calorias)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Elimnar" class="btn btn-danger" /> 
    </form>

</div>


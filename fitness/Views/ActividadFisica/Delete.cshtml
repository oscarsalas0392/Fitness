@model Fitness.Model.Models.ActividadFisica

@{
    ViewData["Title"] = "Delete";
}
<h3>Usted esta seguro de eliminar esta actividad fisica</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @((ViewBag.TipoActividadFisica as SelectList).Where(x => x.Value == Model.Id.ToString()).FirstOrDefault().Text)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            Duración
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duracion) minutos
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Distancia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Distancia)   @((ViewBag.TipoDistancia as SelectList).Where(x => x.Value == Model.TipoDistancia.ToString()).FirstOrDefault().Text)
        </dd>
        <dt class = "col-sm-2">
            Calorías
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Calorias)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comentarios)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comentarios)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>

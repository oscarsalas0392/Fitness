@model Fitness.Model.Models.ActividadFisica

@{
    ViewData["Title"] = "Details";
}

<div>
    <a class="regresar" asp-action="Index"><i class="fas fa-arrow-left"></i></a>
    <h4 class="d-inline-block">Actividad Fisica</h4>
    <hr />
    <dl class="row">


        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @(Model.TipoActividadFisicaNavigation.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha) 
        </dd>
        <dt class = "col-sm-2">
            Duración
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duracion) minutos
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Distancia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Distancia)   @(Model.TipoDistanciaNavigation.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Calorías
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Calorias)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comentarios)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comentarios)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
</div>
